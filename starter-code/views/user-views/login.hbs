<h2>Login</h2>


<form action="/login" method="POST">
  <label>Username</label>
  <input type="text" name="theUsername">

  <label>Password</label>
  <input type="text" name="thePassword">

  <button>Login</button>

  {{#if err}}
  <div>{{err}}</div>
  {{/if}}

  {{#if yay}}
  <div>{{yay}}</div>
  {{/if}}

</form>